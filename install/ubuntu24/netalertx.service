[Unit]
Description=NetAlertX - Network, presence scanner and alert framework
ConditionPathExists=/app/server

[Service]
Environment="VIRTUAL_ENV=/opt/netalertx-python" "PATH=$VIRTUAL_ENV/bin:$PATH"
EnvironmentFile=/app/.env
WorkingDirectory=/app/server
ExecStart=/opt/netalertx-python/bin/python3 /app/server
Restart=on-failure
Type=simple

[Install]
WantedBy=multi-user.target
